- if ! current_user.nil?
  .span-24#user_summary
    .span-4#username
      = current_user.username
    .span-20.last#usercash
      - if  ! current_user.admin
        You have $
        = "%0.2f" % current_user.cash


#market-name
  = @market.name
#market-start
  Market Start Date:
  = @market.start_date
.span-24.last
  %table.outcome
    %th Outcomes
    %th Sell Price
    %th Buy Price
    - if ! current_user.nil?                
      %th Shares Owned
      
    %th Total Shares Held
    %th

    - cache(:fragment => "market_#{@market.id}_outcomes") do
      = render @market.outcomes
      