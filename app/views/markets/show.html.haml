- if ! current_user.nil?
  .span-24#user_summary
    .span-4#username
      = current_user.username
    .span-20.last#usercash
      - if  ! current_user.admin
        You have $
        = "%0.2f" % current_user.cash


#market-name
  = @market.name

#market_display
  =render @market
    
:javascript
  $(document).ready( function(){ 
    setInterval(function(){ 
      $.ajax({
        url: "/markets/#{@market.id}.js", 
        dataType: 'script',
        cache: true
      });
    }, 3000);
  })

      